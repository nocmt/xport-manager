{
  "name": "xport-manager",
  "displayName": "端口管理器 (Port Manager)",
  "description": "Visual Studio Code 的端口管理插件，支持查看端口、进程名称、PID，并可停止进程。",
  "version": "0.0.3",
  "publisher": "nocmt",
  "engines": {
    "vscode": "^1.90.0"
  },
  "author": "nocmt",
  "repository": "https://github.com/nocmt/xport-manager",
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xport-explorer",
          "title": "端口管理",
          "icon": "resources/server.svg"
        }
      ]
    },
    "views": {
      "xport-explorer": [
        {
          "id": "xport-ports",
          "name": "运行端口"
        }
      ]
    },
    "commands": [
      {
        "command": "xport.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "xport.kill",
        "title": "停止进程",
        "icon": "$(stop-circle)"
      },
      {
        "command": "xport.search",
        "title": "搜索端口/进程",
        "icon": "$(search)"
      },
      {
        "command": "xport.clearSearch",
        "title": "清除搜索",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "xport.refresh",
          "when": "view == xport-ports",
          "group": "navigation"
        },
        {
          "command": "xport.search",
          "when": "view == xport-ports && !xport:hasFilter",
          "group": "navigation@1"
        },
        {
          "command": "xport.clearSearch",
          "when": "view == xport-ports && xport:hasFilter",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "xport.kill",
          "when": "view == xport-ports",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
